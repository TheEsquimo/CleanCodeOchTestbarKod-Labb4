@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    ViewData["CardALink"] = "";
}

<div class="text-center">
    @if (!Model.HasVoted)
    {
      <div class="float-left">
        <form asp-page-handler="UserVoted" asp-route-cardVotedOn="A">
          <button>
              <img src=@Model.CardImageA />
          </button>
        </form>
      </div>
      <div class="float-left">
        <form asp-page-handler="UserVoted" asp-route-cardVotedOn="B">
          <button>
            <img src=@Model.CardImageB />
          </button>
        </form>
      </div>
    }
    else
    {
      <div class="float-left">
        <img src=@Model.CardImageA />
      </div>
      <div class="float-left">
        <img src=@Model.CardImageB />
      </div>
      <button>Next</button>
    }
</div>
